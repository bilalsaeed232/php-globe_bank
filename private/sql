CREATE TABLE subjects (
	id INT(11) NOT NULL AUTO_INCREMENT,
	menu_name VARCHAR(255) NOT NULL,
	visible TINYINT(1) NOT NULL DEFAULT 0,
	position INT(3) NOT NULL,
	PRIMARY KEY (id)
);



CREATE TABLE pages (
	id INT(11) NOT NULL AUTO_INCREMENT,
	subject_id INT(11),
	menu_name VARCHAR(255),
	position INT(3),
	visible TINYINT(1),
	content TEXT,
	PRIMARY KEY (id)
);


ALTER TABLE pages ADD INDEX fk_subject_id (subject_id);

ALTER TABLE pages ADD CONSTRAINT fk_subject_id(subject_id) REFERENCES subjects(id) ON UPDATE CASCADE ON DELETE SET NULL;

